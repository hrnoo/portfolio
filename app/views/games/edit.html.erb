<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>Editing Game</h2>
        <% if @game && @game.errors.any? %>
          <div class="error_explanation">
            <div class="error_title">
              <h2><%= @game.errors.count %> errors prohibited this game from being saved:</h2>
            </div>
            <div class="error_content">
              <ul>
                <% @game.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        <% end %>
        <%= form_with model:@game, url: game_path(@game), local: true do |game| %>
        <div class="form-group">
          <label for="game_title">Title</label>
          <%= game.text_field :title, class: "game_title form-control" %>
        </div>
        <div class="form-group">
          <label for="game_image">Game Image</label>
          <%= game.attachment_field :game_image, class: "game_image form-control" %>
        </div>
        <div class="form-group">
          <label for="game_opinion">Opinion</label>
          <%= game.text_area :body, class: "game_opinion form-control" %>
        </div>
        <div class="form-group">
          <%= game.submit 'Update Game', class: "btn btn-secondary btn-success" %>
        </div>
        <% end %>
        <%= link_to "Show", game_path(@game) %>
        <span>|</span>
        <%= link_to "Back", games_path %>
      </div>
    </div>
  </div>
</main>
