<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <% if @game && @game.errors.any? %>
      <div class="error_explanation">
        <div class="error_title">
          <h2><%= @game.errors.count %> errors prohibited this game from being saved:</h2>
        </div>
        <div class="error_content">
          <ul>
            <% @game.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>
    <div class='row'>
      <div class='col-md-3'>
        <h2>User info</h2>
        <table class='table'>
          <tr>
            <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "default-image.jpg" %>
          </tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </table>
        <div class='row'>
          <% if @user.id == current_user.id %>
            <a class="btn btn-outline-secondary btn-block" href="<%= edit_user_path(@user) %>">
              <i class="fas fa-user-cog"></i>
            </a>
          <% end %>
        </div>
        <h2 class="mt-3">New game</h2>
        <%= form_with model: @game_new, local:true do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>
          <h4>Game Image</h4>
          <%= f.attachment_field :game_image %>
          <h4>Opinion</h4>
          <%= f.text_area :body %>
          <%= f.submit 'Create Game' %>
        <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Games</h2>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>User</th>
              <th>Title</th>
              <th>Game Image</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <tbody>
            <% @games.each do |game| %>
              <tr>
                <td>
                  <%= link_to  @user.name, user_path(game.user_id) %>
                </td>
                <td><%= link_to game.title, game_path(game) %></td>
                <td>
                    <%= attachment_image_tag game, :game_image, :fill, 100, 100, format: 'jpeg', fallback: "default-image.jpg" %>
                </td>
                <td><%= game.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
