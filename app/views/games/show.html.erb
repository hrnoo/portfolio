<main>
<p id="notice"><%= flash[:notice] %></p>
  <div class="container">
    <div class='row'>
      <div class='col-md-3'>
        <h2>User info</h2>
        <table class='table'>
          <tr>
           <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "default-image.jpg" %>
          </tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </table>
        <div class='row'>


          <a class="btn btn-outline-secondary btn-block" href="<%= edit_user_path(@user) %>">
            <i class="fas fa-user-cog"></i>
          </a>
        </div>
        <h2 class="mt-3">New game</h2>
        <%= form_with model: @game_new, local:true do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Game Image</h4>
        <%= f.attachment_field :game_image %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <%= f.submit 'Create Game' %>
        <% end %>

      </div>
  <div class="col-md-8 offset-md-1">
      <h1>Game detail</h1>
          <table class="table table-user-show">
           <tr>
            <td>
              <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "default-image.jpg" %>
            </td>
            <td><%= link_to @user.name, user_path(@user) %></td>
            <td><%= link_to @game.title, game_path(@game) %></td>
            <td><%= @game.body %></td>
            <% if @game.user_id == current_user.id %>
            <td><%= link_to "Edit", edit_game_path(@game), class:"btn btn-success"%></td>
            <td><%= link_to "Destroy", game_path(@game), method: :delete, data: {confirm: "本当に消しますか？"}, class:"btn btn-danger" %></td>
              <% end %>
            </tr>
            <tr>
              <td colspan="3">
              <%= attachment_image_tag @game, :game_image, :fill, 300, 300, format: 'jpeg', fallback: "default-image.jpg" %>
              </td>
            </tr>
         </table>

    </div>
  </main>