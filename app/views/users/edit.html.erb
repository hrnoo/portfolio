<h1>User info</h1>
<%= form_for(@user) do |f| %>
 <% if @user.errors.any? %>
<div class="error_explantation">
            <div class="error_title">
              <h2><%= @user.errors.count %> errors prohibited this book from being saved:</h2>
            </div>
            <div class="error_content">
              <ul>
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        <% end %>
